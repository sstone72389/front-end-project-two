{{#each tasks as |task|}}

  <!-- {{> partial}}
  Don't uncomment yet -->

 <!-- Developers, why are we using data-id and not just id? -->
  <ul data-id="{{task.id}}">
    <div class="hideMe">
    <li><small>Task Id: {{task.id}}</small></li>
    {{#if task.name}}
    <li>{{task.name}} <button class="remove-task-button btn btn-transparent-four" data-id="{{task.id}}">DELETE</button></li>
      <!-- <li><button class="remove">Remove</button> -->
    {{else}}
      <li>No task Name Entered <button class="remove-task-button btn btn-transparent-four" data-id="{{task.id}}">DELETE</button></li>
      <!-- <li><button class="remove">Remove</button> -->
    {{/if}}
  </div>
</ul>

{{/each}}
